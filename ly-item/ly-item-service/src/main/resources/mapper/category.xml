<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.leyou.item.mapper.CategoryMapper">

    <select id="queryById" parameterType="int" resultType="com.leyou.item.pojo.Category">
        SELECT * FROM tb_category WHERE id = #{id}
    </select>

    <select id="queryByPid" parameterType="int" resultType="com.leyou.item.pojo.Category">
        SELECT * FROM tb_category WHERE parent_id = #{pid}
    </select>

</mapper>